<div class="row">
  <h2 class="col s6 offset-s3">Show Project</h2>
  <div class="row">
      <div class="col s10 m8 offset-s1 offset-m2">
        <div class="card">
          <div class="card-image">
            <img src="http://www.thehindu.com/migration_catalog/article12251037.ece/BINARY/14TH_LAKE">
            <span class="card-title"><%= @project.title %></span>
          </div>
          <div class="card-content">
            <p><%= @project.description %></p>
          </div>
          <div class="card-action">
            <%= link_to 'Edit', edit_project_path(@project.id) %>
            <%= link_to 'Delete', project_path(@project.id),  method: :delete %>
          </div>
        </div>
      </div>
    </div>
</div>

<%= form_tag(projects_path, method: :get) do %>
  <div class="row">
    <div class="col s12 m6 offset-m2">
        <%= text_field_tag :search_location, params[:search_location], placeholder: 'Type a location.. Ex. Velachery' %>
    </div>
    <div class="input-field col s12 m2">
      <%= submit_tag 'Search', class: 'waves-effect waves-light btn' %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col s12 m10 offset-m1 center-align">
    <% if @projects.empty? %>
      <span class="trending">No Projects found. <%= link_to 'Choose from All', root_path() %></span>
    <% else %>
      <% unless current_user and current_page? user_projects_path(current_user) %>
        <span class="trending"><%= pluralize(@projects.count, 'opportunities') %> to volunteer</span>
      <% end %>
    <% end %>
  </div>
  <% @projects.each do |project| %>
    <%= render partial: "project", locals: { project: project } %>
  <% end %>
</div>

<% if current_user and policy(Project).manage? %>
  <%= link_to '<i class="material-icons">add</i>'.html_safe, new_project_path, class: "btn-floating btn-large waves-effect waves-light red", id: 'new' %>
<% end %>

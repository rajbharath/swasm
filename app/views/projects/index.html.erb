<%= form_tag(projects_path, method: :get) do %>
  <div class="row">
    <div class="col s12 m6 offset-m2">
        <%= text_field_tag :search_location, params[:search_location], placeholder: 'Type a location.. Ex. Velachery' %>
    </div>
    <div class="input-field col s12 m2">
      <%= submit_tag 'Search', class: 'waves-effect waves-light btn' %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col s12 m6 offset-m3 chip center-align">
    <% if @projects.empty? %>
      No Projects found
    <% else %>
      Showing <%= @projects.count %> Projects
    <% end %>
  </div>
  <% @projects.each do |project| %>
    <%= render partial: "project", locals: { project: project } %>
  <% end %>
</div>

<%= link_to '<i class="material-icons">add</i>'.html_safe, new_project_path, class: "btn-floating btn-large waves-effect waves-light red" %>

<div class="row">
  <div class="col s12 m10 offset-m1">
    <div class="card">
      <div class="card-image">
        <%= image_tag(project.image) %>
      </div>
      <div class="card-content">
        <p><%= project.description %></p>
        <p><%= project.location.latitude %></p>
        <p><%= project.location.longitude %></p>
      </div>
      <div class="card-action">
        <% if current_user and policy(Project).manage? %>
          <%= link_to 'Edit', edit_project_path(project.id) %>
          <%= link_to 'Delete', project_path(project.id),  method: :delete %>
        <% end %>
        <% if project.volunteers.include? current_user %>
          <%= link_to 'I leave!', project_volunteership_path(project, current_user), method: :delete %>
        <% else %>
          <%= link_to 'Join us!', project_volunteerships_path(project), method: :post %>
        <% end %>
        <%= link_to 'View in Map', "https://www.google.com/maps/search/?api=1&query=#{ project.location.longitude },#{project.location.latitude}", target: "_blank" %>
        <div class="chip">
          <%= project.volunteers.count %> volunteers
        </div>
      </div>
    </div>

     <div class="row">

      <div class="col s6">
        <div class="card blue-grey lighten-5">
          <div class="card-content center-align">
            <span>Area</span>
            <h3><%= project.specifications.area %> (Sq.m)</h3>
          </div>
        </div>
      </div>
      <div class="col s6">
        <div class="card blue-grey lighten-5">
          <div class="card-content center-align">
            <span>BOD</span>
            <h3><%= project.specifications.bod %></h3>
          </div>
        </div>
      </div>
      <div class="col s6">
        <div class="card blue-grey lighten-5">
          <div class="card-content center-align">
            <span>COD</span>
            <h3><%= project.specifications.cod %></h3>
          </div>
        </div>
      </div>
      <div class="col s6">
        <div class="card blue-grey lighten-5">
          <div class="card-content center-align">
            <span>Ph</span>
            <h3><%= project.specifications.ph %></h3>
          </div>
        </div>
      </div>
      <div class="col s6">
        <div class="card blue-grey lighten-5">
          <div class="card-content center-align">
            <span>Budget</span>
            <h3><%= project.specifications.budget %></h3>
          </div>
        </div>
      </div>
    </div>

    <% if current_user and policy(Project).manage? %>
      <% project.volunteers.each do |volunteer| %>
        <%= render partial: 'users/user', locals: { user: volunteer } %>
      <% end %>
    <% end %>
  </div>
</div>
